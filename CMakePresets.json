{
  "version": 8,

  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base (Ninja + vcpkg)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja Multi-Config",
      "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },

    {
      "name": "windows",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },

    {
      "name": "linux",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },

    {
      "name": "macos",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "debug-windows",
      "configurePreset": "windows",
      "configuration": "Debug"
    },
    {
      "name": "release-windows",
      "configurePreset": "windows",
      "configuration": "Release"
    },

    {
      "name": "debug-linux",
      "configurePreset": "linux",
      "configuration": "Debug"
    },
    {
      "name": "release-linux",
      "configurePreset": "linux",
      "configuration": "Release"
    },

    {
      "name": "debug-macos",
      "configurePreset": "macos",
      "configuration": "Debug"
    },
    {
      "name": "release-macos",
      "configurePreset": "macos",
      "configuration": "Release"
    }
  ]
}
